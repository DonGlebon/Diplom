<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:background="@color/white" android:elevation="2dp"
            android:animateLayoutChanges="true">
        <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/spinnerLayer" android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
                android:elevation="2dp"/>
        <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/spinnerColumn" android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
                android:elevation="2dp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/recyclerStyle"/>
</LinearLayout>