<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="@string/layer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_layer_name"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:textSize="20sp"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/roboto"/>
        <TextView
                android:text="@string/layer_path"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/tv_layer_path"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_layer_name" app:layout_constraintVertical_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/tv_layer_name" android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto"/>
        <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch1" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_layer_path"
                android:checked="true" android:text="Отображать:" android:textSize="14sp"
                android:fontFamily="@font/roboto" android:showText="false"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>