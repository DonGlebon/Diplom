<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.diplom.map">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
            android:name=".mvp.App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:windowSoftInputMode="adjustPan" android:label="ГИС Негорельский лесхоз">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".mvp.components.layerscreen.view.LayerActivity"
                android:label="Layer activity"
                android:parentActivityName=".mvp.components.mapscreen.view.MapActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.diplom.map.mvp.components.mapscreen.view.MapActivity"/>
        </activity>

        <meta-data
                android:name="com.google.android.geo.API_KEY"
                android:value="@string/google_maps_key"/>
        <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts"/>

        <activity
                android:name=".mvp.components.mapscreen.view.MapActivity"
                android:label="@string/title_activity_maps">
        </activity>
    </application>

</manifest>